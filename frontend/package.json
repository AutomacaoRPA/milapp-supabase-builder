{
  "name": "milapp-frontend",
  "version": "2.0.0",
  "description": "Frontend do MILAPP - Centro de Excelência em Automação RPA",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@mui/x-data-grid": "^6.18.2",
    "@mui/x-date-pickers": "^6.18.2",
    "@tanstack/react-query": "^5.8.4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "axios": "^1.6.2",
    "chart.js": "^4.4.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "socket.io-client": "^4.7.4",
    "typescript": "^5.2.2",
    "web-vitals": "^3.5.0",
    "zustand": "^4.4.7"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "setup:dev": "npm install && npm run lint:fix && npm run type-check",
    "test:all": "npm run test && npm run test:e2e && npm run test:coverage",
    "test:coverage": "npm run test -- --coverage --watchAll=false",
    "test:e2e": "cypress run",
    "test:integration": "npm run test -- --testPathPattern=integration",
    "dev:full": "concurrently \"npm start\" \"npm run test:watch\"",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "security:check": "npm audit && npm audit fix",
    "deploy:staging": "npm run build && docker build -t milapp-staging . && docker-compose -f docker-compose.staging.yml up -d",
    "deploy:prod": "npm run build && docker build -t milapp-prod . && docker-compose -f docker-compose.production.yml up -d",
    "logs:prod": "docker-compose -f docker-compose.production.yml logs -f",
    "health:check": "curl -f http://localhost:3000/health || exit 1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0"
  },
  "proxy": "http://localhost:8000"
} 